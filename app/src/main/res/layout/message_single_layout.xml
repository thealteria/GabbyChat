<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:weightSum="10"
    android:id="@+id/messageSingleLayout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/boy"
        android:id="@+id/messageProfileLayout" />


    <TextView
        android:id="@+id/messageTextLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/messageProfileLayout"
        android:layout_centerVertical="true"
        android:text="Message"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:background="@drawable/message_text_back"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/messageTime"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/messageTextLayout"
        android:text="00:00" />

    <ImageView
        android:id="@+id/messageImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/messageProfileLayout"
        android:contentDescription="image" />

</RelativeLayout>