<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messageSingleLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/messageRelLayout">

        <!--<de.hdodenhof.circleimageview.CircleImageView-->
        <!--android:id="@+id/messageProfileLayout"-->
        <!--android:layout_width="36dp"-->
        <!--android:layout_height="36dp"-->
        <!--android:src="@drawable/boy" -->
            <!--android:visibility="gone"/>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/leftLayout"
            android:background="@drawable/message_text_back"
            android:layout_centerVertical="true"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="80dp"
            android:padding="3dp"
            android:elevation="3dp">

            <TextView
                android:id="@+id/messageTextLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/message_text_back"
                android:text="Message"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:padding="5dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <ImageView
                android:id="@+id/messageImageLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription"
                android:visibility="gone"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/message_text_white"
            android:layout_centerVertical="true"
            android:layout_marginTop="2dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/rightLayout"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="80dp"
            android:padding="3dp"
            android:elevation="3dp">

            <TextView
                android:id="@+id/messageTextRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/message_text_white"
                android:text="Message"
                android:padding="5dp"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>

            <ImageView
                android:id="@+id/messageImageRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription"
                android:visibility="gone"/>

        </LinearLayout>

    </RelativeLayout>

    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:id="@+id/messageTime"-->
    <!--android:layout_marginStart="10dp"-->
    <!--android:layout_toEndOf="@+id/messageTextLayout"-->
    <!--android:text="00:00" />-->

</LinearLayout>